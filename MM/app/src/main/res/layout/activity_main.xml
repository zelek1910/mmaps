<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michal.mm.MainActivity">

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="128dp"
        android:autoText="false"
        android:text="wyszkukaj"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="61dp" />

    <Button
        android:id="@+id/buttonUcz"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:text="Uczelnie"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/buttonWyz"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="100dp"
        android:text="wyznacz trase"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/buttonGdzie"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:text="Gdzie jestem"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/buttonWyz"
        app:layout_constraintTop_toBottomOf="@+id/buttonUcz"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>
